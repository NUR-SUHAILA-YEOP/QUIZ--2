package quiz2;
import java.util.Scanner;
class If_else {

	public static void main(String[] args) {
		// Quiz 2 : Q1
		// a. Number of classes held
	//	b. The number of classes attended.
	//	c. Print percentage of class attended, is the student is allowed to sit in exam or not?
		//SALAH PERBETULKAN

		Scanner sc = new Scanner(System.in);
		int attend, held;
		double percent;
		
		System.out.print("Please enter the number of class held :");
		held = sc.nextInt();
		System.out.print("Please enter the number of classes attend :");
		attend = sc.nextInt();
		
		percent = ((attend/held)*100);
		
		System.out.println("The percentage of attendance: "+percent);
		
		if (percent< 75) {
			System.out.println("\nYou are not allowed to sit in exam!");
		}
		
		else
			System.out.println("\nYou are allowed to sit in exam!");
	}

}
